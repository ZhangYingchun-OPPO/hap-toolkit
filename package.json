{
  "name": "hap",
  "version": "0.4.1",
  "description": "A command line toolkit for developing Quick Apps.",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna bootstrap --hoist=webpack",
    "clean": "gulp clean",
    "dev": "gulp watch --dev",
    "build": "gulp",
    "build:dev": "gulp --dev",
    "test": "gulp test",
    "test:cov": "gulp test --coverage",
    "lint": "eslint .",
    "pack": "lerna exec \"npm pack\"",
    "pack-sourcemaps": "lerna exec \"find . -path ./node_modules -prune -o -name *.js.map -print0 | tar -czvf sourcemaps.tgz --null -T -\"",
    "prettier": "prettier \"**/*.{js,ts,tsx,md,css,html,yml}\" --write",
    "prettier-check": "prettier --list-different \"**/*.{js,ts,tsx,md,css,html,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,md,css,html,yml}": [
      "prettier --write",
      "git add"
    ],
    ".prettier{rc,ignore}": [
      "npm run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.0.1",
    "del": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fkill": "^7.0.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-cli": "^2.2.0",
    "gulp-eslint": "^5.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-jest": "^4.0.3",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^1.2.0",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "lerna": "^3.20.2",
    "lint-staged": "^8.2.1",
    "mini-css-extract-plugin": "^1.3.0",
    "node-fetch": "^2.6.0",
    "plugin-error": "^1.0.1",
    "prettier": "^1.19.1",
    "pump": "^3.0.0",
    "strip-ansi": "^6.0.0",
    "webpack": "5.24.0",
    "webpack-sources": "^2.2.0"
  }
}
